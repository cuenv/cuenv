{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Config",
  "description": "Main configuration structure for cuenv",
  "type": "object",
  "properties": {
    "auditMode": {
      "description": "Security and debugging",
      "type": [
        "boolean",
        "null"
      ]
    },
    "cacheEnabled": {
      "type": [
        "boolean",
        "null"
      ]
    },
    "cacheMode": {
      "description": "Cache configuration",
      "anyOf": [
        {
          "$ref": "#/$defs/CacheMode"
        },
        {
          "type": "null"
        }
      ]
    },
    "defaultCapabilities": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string"
      }
    },
    "defaultEnvironment": {
      "description": "Default environment settings",
      "type": [
        "string",
        "null"
      ]
    },
    "outputFormat": {
      "description": "Task output format",
      "anyOf": [
        {
          "$ref": "#/$defs/OutputFormat"
        },
        {
          "type": "null"
        }
      ]
    },
    "traceOutput": {
      "description": "Chrome trace generation",
      "type": [
        "boolean",
        "null"
      ]
    }
  },
  "$defs": {
    "CacheMode": {
      "description": "Cache mode options",
      "type": "string",
      "enum": [
        "off",
        "read",
        "read-write",
        "write"
      ]
    },
    "OutputFormat": {
      "description": "Task output format options",
      "type": "string",
      "enum": [
        "tui",
        "spinner",
        "simple",
        "tree",
        "json"
      ]
    }
  }
}