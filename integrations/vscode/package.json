{
  "name": "cuenv-vscode",
  "displayName": "Cuenv",
  "description": "VSCode integration for Cuenv",
  "version": "0.1.1",
  "publisher": "cuenv",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cuenv/cuenv"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:cue",
    "workspaceContains:env.cue"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cuenv.refresh",
        "title": "Refresh Cuenv Data",
        "icon": "$(refresh)"
      },
      {
        "command": "cuenv.runTask",
        "title": "Run Task"
      },
      {
        "command": "cuenv.setEnvironment",
        "title": "Set Environment"
      },
      {
        "command": "cuenv.showEnvironment",
        "title": "Show Variables",
        "icon": "$(eye)"
      },
      {
        "command": "cuenv.showGraph",
        "title": "Show Dependency Graph",
        "icon": "$(type-hierarchy)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cuenv-explorer",
          "title": "Cuenv",
          "icon": "$(beaker)"
        }
      ]
    },
    "views": {
      "cuenv-explorer": [
        {
          "id": "cuenv.tasks",
          "name": "Tasks"
        },
        {
          "id": "cuenv.environments",
          "name": "Environments"
        },
        {
          "id": "cuenv.variables",
          "name": "Variables"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "cuenv.refresh",
          "when": "view == cuenv.tasks",
          "group": "navigation"
        },
        {
          "command": "cuenv.showGraph",
          "when": "view == cuenv.tasks",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "cuenv.runTask",
          "when": "view == cuenv.tasks && viewItem == task",
          "group": "inline"
        },
        {
          "command": "cuenv.setEnvironment",
          "when": "view == cuenv.environments && viewItem == environment",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Cuenv",
      "properties": {
        "cuenv.executablePath": {
          "type": "string",
          "default": "cuenv",
          "description": "Path to the cuenv executable"
        },
        "cuenv.embeddedLanguages.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable IntelliSense for embedded code in CUE files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "bun run bundle",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "bundle": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "package": "vsce package --allow-missing-repository --no-dependencies",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/node": "^18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "esbuild": "^0.19.10",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
